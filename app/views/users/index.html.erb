<%= stylesheet_link_tag "/homepage.css" %>

<div class="header">
  <img src="/acebook-logo.jpg" id="logo">
  <div class="navigation">
    <div class="links">
      <%= link_to @user.first_name, user_path(@user.id) %>
      <%= link_to "Home", '/' %>
      <%= link_to "Log Out", logout_path, method: "delete" %>
    </div>
  </div>
</div>

<div class="body">
  <div class="content">
    <div class="welcome">
      <h2>Welcome <%= @user.first_name %>!</h2>
    </div>
    <div class="add-post">
      <%= form_for @post do |form| %>
        <%= hidden_field_tag :user_id, @user.id %>
        <%= form.text_field :message, placeholder: "What's on your mind, #{@user.first_name}?", class: "input-box" %><br>
        <%= form.submit "Post", class: 'post-button' %>
      <% end %>
    </div>
    <div class="posts">
      <% @posts.reverse.each do |post| %>
        <div class="post">
          <%= link_to post.users.first_name, user_path(post.user_id), class: "name" %>
          <div class="time"><%= time_ago_in_words(post.created_at) %> ago</div>
          <div class="message"<p><%= post.message %></p></div>
            <% if @user.id == post.users.id %>
              <p>
                <%= link_to 'Delete', user_post_path(@user.id, post.id), method: "delete" %>
                <%= link_to 'Update', user_post_path(@user.id, post.id), method: "get"%>
              </p>
            <% end %>
            <%= link_to 'Likes', user_post_likes_path(@user.id, post.id) %> <%= post.likes.length %>
            <p>
              <%= button_to 'Like', user_post_likes_path(@user.id, post.id), method: "post", class: 'like-button'%>
              <%= button_to 'Unlike', user_post_like_path(@user.id, post.id, @user.id), method: "delete", class: 'like-button' %>
            </p>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div>
  <%= notice ? notice : '' %>
</div>
